<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.views.CollectorFragment"> <com.google.android.material.appbar.AppBarLayout
    android:id="@+id/appBarLayout_collector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_primary" android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_collector"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/collectors_bottom_nav"
        app:titleTextColor="@color/color_text">

        <ImageView
            android:id="@+id/logoutIconCollector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/baseline_exit_to_app_24"
            android:padding="16dp"
            android:contentDescription="@string/logout"
            app:tint="@color/color_text"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/color_secondary"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchViewCollector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="@string/hitn_search_field"
                app:iconifiedByDefault="false"
                app:queryBackground="@android:color/transparent"
                android:theme="@style/ThemeOverlay.AppCompat.Light" />
        </androidx.cardview.widget.CardView>

        <android.widget.ProgressBar
            android:id="@+id/progressBarCollectors"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/textViewCollectorsError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/hint_text"
            android:text="@string/empty_albums"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Error al cargar o lista vacÃ­a."/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCollectors"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingHorizontal="8dp"
            tools:listitem="@layout/list_item_collector" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
