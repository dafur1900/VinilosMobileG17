<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/collector_background"
    tools:context=".ui.views.CollectorFragment"> <com.google.android.material.appbar.AppBarLayout
    android:id="@+id/appBarLayout_collector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/collector_primary"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_collector"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/collectors_title"
        app:titleTextColor="@color/collector_text_primary_on_dark">

        <ImageView
            android:id="@+id/logoutIcon_collector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_logout_placeholder"  android:padding="16dp"
            android:contentDescription="@string/collectors_logout_description"
            app:tint="@color/collector_icon_tint_on_dark"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/collector_search_bar_background"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView_collector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="@string/collectors_search_hint"
                app:iconifiedByDefault="false"
                app:queryBackground="@android:color/transparent"
                android:theme="@style/ThemeOverlay.AppCompat.Light" />
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCollectors"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingHorizontal="8dp"
            tools:listitem="@layout/list_item_collector" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>